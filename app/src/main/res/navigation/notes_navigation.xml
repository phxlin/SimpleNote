<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notes_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="me.yufanlin.simplenote.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/actionAddNote"
            app:destination="@id/addNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="me.yufanlin.simplenote.ui.AddNoteFragment"
        android:label="Note"
        tools:layout="@layout/fragment_add_note" >
        <action
            android:id="@+id/actionSaveNote"
            app:destination="@id/homeFragment" />
        <argument android:name="note"
            app:nullable="true"
            android:defaultValue="@null"
            app:argType="me.yufanlin.simplenote.room.Note"/>
    </fragment>
</navigation>